<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:constraint_referenced_ids="boardTextViewTitle, boardImageView, boardTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.airbnb.lottie.LottieAnimationView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/boardImageView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        app:lottie_repeatCount="4"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_imageAssetsFolder="/raw"/>

<!--    <ImageView-->
<!--        android:id="@+id/boardImageView"-->
<!--        android:layout_width="350dp"-->
<!--        android:layout_height="350dp"-->
<!--        tools:src="@drawable/ic_launcher_background"/>-->

    <TextView
        android:id="@+id/boardTextViewTitle"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:gravity="center"/>

    <TextView
        android:id="@+id/boardTextView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="This is a hard code long text "
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"/>


</androidx.constraintlayout.widget.ConstraintLayout>